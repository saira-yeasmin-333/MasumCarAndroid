<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#FDEB93"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/icon"
                    android:padding="5dp"
                    android:id="@+id/car_image_adapter"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:weightSum="3"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".7"
                    android:weightSum="2"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/make_model_home_manu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1.4"
                        android:text="make+ihuhug"
                        android:textColor="#E1572B"
                        android:textSize="20sp"
                        android:layout_marginStart="4dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight=".3"
                        android:padding="5dp"
                        android:id="@+id/delete_manu_home"
                        android:src="@drawable/delete_64"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_height="35dp"/>


                    <ImageView
                        android:id="@+id/edit_manu_home"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight=".3"
                        android:gravity="right"
                        android:padding="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/edit_button" />
                </LinearLayout>


                <TextView
                    android:id="@+id/reg_id_manu_home"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:layout_marginStart="4dp"
                    android:text="41654" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:weightSum="4"
                    android:orientation="vertical"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Year Made"
                            android:textColor="@color/black"
                            android:layout_marginRight="16dp"
                            android:drawableLeft="@drawable/year"
                            android:drawablePadding="4dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="416ghgtrh54"
                            android:id="@+id/year_manu_home"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Color"
                            android:drawableLeft="@drawable/colour"
                            android:drawablePadding="4dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="16dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="416ghgtrh54"
                            android:id="@+id/color_manu_home"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Price"
                            android:drawableLeft="@drawable/price_tag"
                            android:drawablePadding="4dp"
                            android:textColor="@color/black"
                            android:layout_marginRight="16dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="416ghgtrh54"
                            android:id="@+id/price_manu_home"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="In Stock"
                            android:textColor="@color/black"
                            android:layout_marginRight="16dp"
                            android:drawableLeft="@drawable/stock"
                            android:drawablePadding="4dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="416ghgtrh54"
                            android:id="@+id/quantity_manu_home"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>